        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "experimentalDecorators": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.ts"
